                    <div class="card-body">
                    
                                   <canvas id="storageDonut" width="656" height="656" style="display: block; box-sizing: border-box; height: 328px; width: 328px;"></canvas>

                    </div>
                  </div>
                </div>
{% set noms = [] %}
{% set tailles = [] %}
{% for s in stockages %}
    {% set noms = noms|merge([s.nom]) %}
    {% set tailles = tailles|merge([s.taille]) %}
{% endfor %}




              <script>
document.addEventListener('DOMContentLoaded', function () {
  const ctx = document.getElementById('storageDonut').getContext('2d');

  const labels = {{ noms|json_encode|raw }};
    const data = {{ tailles|json_encode|raw }};

  new Chart(ctx, {
    type: 'doughnut',
    data: {
      labels: labels,
      datasets: [{
        label: 'Stockage utilis√© (MB)',
        data: data,
        backgroundColor: [
          '#4e73df',
          '#1cc88a',
          '#36b9cc',
          '#f6c23e',
          '#e74a3b',
          '#858796',
          '#fd7e14',
          '#20c997',
        ],
        borderWidth: 1
      }]
    },
    options: {
      responsive: true,
      plugins: {
        legend: {
          position: 'right'
        },
        tooltip: {
          callbacks: {
            label: function (context) {
              return `${context.label}: ${context.raw} MB`;
            }
          }
        }
      }
    }
  });
});
</script>




           


  


         

