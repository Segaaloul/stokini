{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('/assets/vendor/css/pages/page-auth.css') }}" />

<div class="container-xxl">
  <div class="authentication-wrapper authentication-basic container-p-y">
    <div class="authentication-inner">
      <div class="card">
        <div class="card-body">
          <!-- Logo -->
          <div class="app-brand justify-content-center mb-4">
            <a href="/" class="app-brand-link gap-2">
              <img src="{{ asset('assets/img/favicon/StokiniLogo.png') }}" width="40px" alt="Stokini Logo" />
              <span class="app-brand-text fw-bolder">Stokini</span>
            </a>
          </div>

          <h4 class="mb-2 text-center">Créer un compte</h4>
          <p class="mb-4 text-center">Rejoignez Stokini dès maintenant !</p>

          {{ form_start(registrationForm) }}

          {# Champ Nom #}
          <div class="mb-3">
            {{ form_label(registrationForm.nom) }}
            {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.nom) }}
          </div>

          {# Champ Email #}
          <div class="mb-3">
            {{ form_label(registrationForm.email) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.email) }}
          </div>

          {# Mot de passe #}
          <div class="mb-3 form-password-toggle">
            {{ form_label(registrationForm.plainPassword.first) }}
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.plainPassword.first) }}
          </div>

          {# Confirmation mot de passe #}
          <div class="mb-3 form-password-toggle">
            {{ form_label(registrationForm.plainPassword.second) }}
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.plainPassword.second) }}
          </div>

          <button type="submit" class="btn btn-primary d-grid w-100" style="background-color:#4ae016;">
            S’inscrire
          </button>

          {{ form_end(registrationForm) }}

          <p class="text-center mt-3">
            <span>Déjà un compte ?</span>
            <a href="{{ path('app_login') }}">Connectez-vous</a>
          </p>

        </div>
      </div>
    </div>
  </div>
</div>

{# Ajoute ici tes scripts JS Bootstrap si besoin #}

{% endblock %}
